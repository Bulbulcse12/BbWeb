@model BbWeb.Models.Company

@{
    ViewData["Title"] = Model == null? "Create" : "Edit";
}

<h1 class="mt-3">@ViewData["Title"] Company</h1>
<br/>

        <form asp-action="@ViewData["Title"]" method="post">
         <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-8 mb-5">

              <div class="form-group row">
                 <div class="col-4">
                   <label asp-for="CompanyName" class="control-label"></label>
                 </div>
                 <div class="col-8">
                   <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                 </div>
              </div>
              

         
              <div class="form-group row">
                 <div class="col-4">
                   <label asp-for="Address" class="control-label"></label>
                 </div>
                 <div class="col-8">
                   <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                 </div>
              </div>
             

             
              <div class="form-group mb-2 row">
                 <div class="col-4">
                   <label asp-for="City" class="control-label"></label>
                 </div>
                 <div class="col-8">
                   <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                 </div>
              </div>

             
              <div class="form-group 
row">
                 <div class="col-4">
                   <label asp-for="PhoneNumber" class="control-label"></label>
                 </div>
                 <div class="col-8">
                   <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                 </div>
              </div>

          </div>

            <div class="form-group text-right mb-2">
                <input type="submit" value="@ViewData["Title"]" class="btn btn-dark" />
                 <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

          </div>
        </form>


