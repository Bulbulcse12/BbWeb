@model BbWeb.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="p-3 mt-2">Create Product</h1>


<div class="row rounded border">
    <div class="col-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
          @*  <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="ProductName" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductName" class="form-control mb-3" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" rows="3" class="form-control mb-3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>   
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-8">
                       <input asp-for="Price" class="form-control mb-3" />
                <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Colour" class="control-label"></label>
                </div>
                <div class="col-8">
                       <input asp-for="Colour" class="form-control mb-3" />
                       <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                      <label class="form-check-label">
                      <input class="form-check-input mb-3" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
                </div>
                <div class="col-8">

                </div>     
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Quantity" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Quantity" class="form-control mb-3" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Image" class="control-label"></label>
                </div>
                <div class="col-8">
                     <input type="file" asp-for="Image" class="form-control mb-3" />
                     
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="CategoryId" class="control-label"></label>
                </div>
                <div class="col-8">
                     <select asp-for="CategoryId" class ="form-control mb-3" asp-items="ViewBag.categoryId">
                         <option disabled selected>-Select Category-</option>
                     </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TagId" class="control-label"></label>
                </div>
                <div class="col-8">
                     <select asp-for="TagId" class ="form-control mb-3" asp-items="ViewBag.tagId">
                           <option disabled selected>-Select Tag-</option>
                     </select>
                </div>  
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>

 
