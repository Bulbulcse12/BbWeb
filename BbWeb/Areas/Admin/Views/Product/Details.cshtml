@model BbWeb.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1 class="p-3 mt-2">Product Details</h1>


<div class="row rounded border">
    <div class="col-8">
        <form asp-action="Details" method="post" enctype="multipart/form-data">
          @*  <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="ProductName" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductName" readonly="readonly" class="form-control mb-3" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description"  readonly="readonly" rows="3" class="form-control mb-3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>   
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-8">
                       <input asp-for="Price"  readonly="readonly" class="form-control mb-3" />
                <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Colour" class="control-label"></label>
                </div>
                <div class="col-8">
                       <input asp-for="Colour"  readonly="readonly" class="form-control mb-3" />
                       <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                      <label class="form-check-label">
                      <input class="form-check-input mb-3"  readonly="readonly" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
                </div>
                <div class="col-8">

                </div>     
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="Quantity" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Quantity"  readonly="readonly" class="form-control mb-3" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="CategoryId" class="control-label"></label>
                </div>
                <div class="col-8">
                     <select asp-for="CategoryId"  readonly="readonly" class ="form-control mb-3" asp-items="ViewBag.categoryId">
                         <option disabled selected>-Select Category-</option>
                     </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TagId" class="control-label"></label>
                </div>
                <div class="col-8">
                     <select asp-for="TagId"  readonly="readonly" class ="form-control mb-3" asp-items="ViewBag.tagId">
                           <option disabled selected>-Select Tag-</option>
                     </select>
                </div>  
            </div>
            <div class="form-group mt-2">
                <a asp-action="Edit" class="btn btn-dark">Edit</a>

                
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
      <div class="col-1"></div>
           <div class="col-3">
               <img src="~/@Model.Image" width="100%" style="border-radius; 5px;border:1px solid #efefef" />
           </div>
</div>

 
