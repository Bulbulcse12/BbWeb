@model BbWeb.Models.Tag

@{
    ViewData["Title"] = Model == null? "Create" : "Edit";
}

<h1>@ViewData["Title"] Tag</h1>
<br />
<div class="row rounded border">
    <div class="col-8 mt-3">
        <form asp-action="@ViewData["Title"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                     <label asp-for="TagName" class="control-label"></label>
                </div>
                <div class="col-8">
                    
                <input asp-for="TagName" class="form-control" />
                <span asp-validation-for="TagName" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-group text-end">
                <input type="submit" value="@ViewData["Title"]" class="btn btn-dark" />
                  <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


